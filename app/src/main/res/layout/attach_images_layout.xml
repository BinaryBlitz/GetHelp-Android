<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:id="@+id/main">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            android:minHeight="?attr/actionBarSize">
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/action_bar">

                <binaryblitz.gethelpapp.Custom.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Новый заказ"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/date_text_view"
                    android:gravity="center_vertical"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="60dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/imageView4"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/back"
                    android:padding="17dp" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <binaryblitz.gethelpapp.Custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Приложите фотографии с дополнительными сведениями о работе"
            android:id="@+id/textView23"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="28dp"
            android:textSize="20sp"
            android:textColor="#212121"
            android:gravity="center" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:text="ПРИЛОЖИТЬ"
            android:id="@+id/button4"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginBottom="56dp"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:text="ПРОДОЛЖИТЬ"
            android:background="#D32F2F"
            android:textColor="#ffffff"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:layout_marginRight="76dp"
            android:layout_marginLeft="76dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

        <binaryblitz.gethelpapp.Custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Вы сможете отправить фотографии позже в чате"
            android:id="@+id/textView24"
            android:layout_gravity="center"
            android:layout_marginTop="106dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textSize="18sp"
            android:textColor="#212121"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="+2 Фотографии"
            android:id="@+id/textView25"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="110dp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>