<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <binaryblitz.gethelpapp.Custom.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="12dp"
                android:textSize="20sp" />

            <binaryblitz.gethelpapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView5"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"
                android:textSize="20sp"
                android:textColor="#5fbed4" />

            <FrameLayout
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/indicator"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:id="@+id/indicator"></FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="#b6b6b6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <binaryblitz.gethelpapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView9"
                android:layout_gravity="right|top"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:textColor="#212121"
                android:textSize="26sp" />

            <binaryblitz.gethelpapp.Custom.BoldRobotoTextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView6"
                android:layout_gravity="left|top"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:textColor="#212121"
                android:textSize="20sp"
                android:maxLines="2" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <binaryblitz.gethelpapp.Custom.RobotoTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView7"
                android:layout_gravity="left|top"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:textColor="#212121"
                android:layout_marginRight="170dp"
                android:singleLine="true" />

            <binaryblitz.gethelpapp.Custom.RobotoTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_gravity="left|top"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="46dp"
                android:textColor="#727272"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="170dp"
                android:singleLine="true" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оплатить"
                android:id="@+id/button"
                android:layout_gravity="right|bottom"
                android:background="#f5c86a"
                android:textColor="#ffffff"
                android:paddingLeft="34dp"
                android:paddingRight="34dp"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="12dp" />
        </FrameLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>