<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#eaeaea"
    android:id="@+id/main">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            android:minHeight="?attr/actionBarSize">
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/action_bar">

                <binaryblitz.gethelpapp.Custom.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Новый заказ"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/date_text_view"
                    android:gravity="center_vertical"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="60dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/imageView2"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ok_btn"
                    android:padding="15dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/imageView4"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/back"
                    android:padding="17dp" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Начало работы"
                    app:met_iconPadding="2dp"
                    app:met_baseColor="#212121"
                    app:met_primaryColor="#212121"
                    app:met_textColorHint="#212121"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="Дата начала"
                    app:met_errorColor="#D32F2F"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="16sp"
                    android:id="@+id/edittext1"
                    android:inputType="phone"
                    android:layout_marginTop="12dp"
                    android:focusable="false"
                    android:enabled="true" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/start"
                    android:focusable="false"
                    android:layout_gravity="top"></FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/end_frame">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Конец работы"
                    app:met_iconPadding="2dp"
                    app:met_baseColor="#212121"
                    app:met_primaryColor="#212121"
                    app:met_textColorHint="#212121"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="Дата начала"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="16sp"
                    app:met_errorColor="#D32F2F"
                    android:id="@+id/edittext12"
                    android:inputType="phone"
                    android:focusable="false"
                    android:enabled="true"
                    android:layout_marginTop="12dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/end"></FrameLayout>
            </FrameLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view25"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Предмет"
            app:met_iconPadding="2dp"
            app:met_baseColor="#212121"
            app:met_errorColor="#D32F2F"
            app:met_primaryColor="#212121"
            app:met_textColorHint="#212121"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Предмет"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:id="@+id/edittext13"
            android:inputType="text"
            android:layout_marginTop="12dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тип работы"
            app:met_iconPadding="2dp"
            app:met_baseColor="#212121"
            app:met_primaryColor="#212121"
            app:met_errorColor="#D32F2F"
            app:met_textColorHint="#212121"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Тип работы"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:id="@+id/edittext14"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view24"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ВУЗ"
            app:met_errorColor="#D32F2F"
            app:met_iconPadding="2dp"
            app:met_baseColor="#212121"
            app:met_primaryColor="#212121"
            app:met_textColorHint="#212121"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="ВУЗ"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:id="@+id/edittext15"
            android:inputType="text"
            android:layout_marginTop="12dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Факультет"
            app:met_iconPadding="2dp"
            app:met_errorColor="#D32F2F"
            app:met_baseColor="#212121"
            app:met_primaryColor="#212121"
            app:met_textColorHint="#212121"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Факультет"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:id="@+id/edittext16"
            android:inputType="text"
            android:layout_marginTop="12dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Курс"
                    app:met_iconPadding="2dp"
                    app:met_baseColor="#212121"
                    app:met_primaryColor="#212121"
                    app:met_errorColor="#D32F2F"
                    app:met_textColorHint="#212121"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="Курс"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="16sp"
                    android:id="@+id/edittext17"
                    android:layout_marginTop="12dp"
                    android:focusable="false"
                    android:enabled="true"
                    android:layout_marginBottom="12dp"
                    android:inputType="number" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/grade"></FrameLayout>
            </FrameLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view234"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="1dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail для отправки решения"
                    app:met_iconPadding="2dp"
                    app:met_baseColor="#212121"
                    app:met_errorColor="#D32F2F"
                    app:met_primaryColor="#212121"
                    app:met_textColorHint="#212121"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="E-mail"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="16sp"
                    android:id="@+id/edittext110"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view23"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание работы"
            app:met_iconPadding="2dp"
            app:met_baseColor="#212121"
            app:met_primaryColor="#212121"
            app:met_errorColor="#D32F2F"
            app:met_textColorHint="#212121"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Описание работы"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:id="@+id/edittext18"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>

</FrameLayout>